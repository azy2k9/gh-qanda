generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model QuestionAndAnswer {
  id       String @id @default(cuid())
  number   Int    @default(autoincrement())
  question String
  answer   String
  status   STATUS @default(NOT_ANSWERED)
}

enum STATUS {
  ANSWERED
  NOT_ANSWERED
  WITH_SHAYKH
}
